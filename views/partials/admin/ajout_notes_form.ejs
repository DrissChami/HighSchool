<% if(id_classe != null){ %>

    <section>

        <p id="hey">Ajout d'une note</p>

        <div class="row">

            <form method="post" action="add">
                <input type="text" placeholder="Matière" name="matiere">
                <input type="text" placeholder="Note 1" name="note1">
                <input type="text" placeholder="Note 2" name="note2">
                <input type="text" placeholder="Note 3" name="note3">
                <input type="hidden" value="<%= id_classe %>" name="id_classe">
                <input type="hidden" value="<%= matricule %>" name="matricule">

                <input type="submit" value="Ajouter">
            </form>

        </div>

    </section>


    <%} else {%>

        <section>

            <p id="hey">Cet élève n'a pas de classe attitrée.</p>

        </section>


        <%}%>
